<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorLightGrey">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_title"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/tv_open_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClickDate"
                android:text="@string/sample_date_time"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:background="@drawable/image_borders"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_title"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                />

            <TextView
                android:id="@+id/tv_open_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_doc_number"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:background="@drawable/image_borders"
                />

        </LinearLayout>

        <Switch
            android:id="@+id/sw_in_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/colorBlue">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="onClickSaveDocument"
                />

            <ImageButton
                android:id="@+id/ib_add"
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginStart="172dp"
                android:background="@drawable/image_borders"
                android:src="@drawable/ic_add_item_line"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2"
                android:onClick="onClickAddItem"
                />

            <ImageButton
                android:layout_width="56dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/image_borders"
                android:src="@drawable/ic_delete_item_line"
                app:layout_constraintBottom_toBottomOf="@+id/ib_add"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/ib_add"
                app:layout_constraintTop_toTopOf="@+id/ib_add"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_doc_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>